<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    @if (Session["InCart"] != null)
    {
        ViewBag.InCart = (int)Session["InCart"];
    }
    else
    {
        ViewBag.InCart = 0;
    }

    @if (Session["username"] != null)
    {
        string user = (string)Session["username"];
        
        ViewBag.User = user;
    }
    else
    {
        ViewBag.User = "";
    }

    <div class="navbar navbar-default role=" navigation">
        <a class="navbar-brand" href="index.html"></a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">SpinTires</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                
                <ul class="nav navbar-nav">
                    <li class="logo">
                        <a href="/Default/Home"><img src="http://spintiresdl.net/wp-content/uploads/2014/07/logo.png" width="251" height="69"></a>
                    </li>
                    <li><a href="/Default/Home">Home</a></li>
                    <li><a href="/Product/Products">Products</a></li>
                    <li><a href="/Default/Index">Log In</a></li>
                    <li><a href="/ShoppingCart/ShoppingCart">@ViewBag.InCart<span class="glyphicon glyphicon-shopping-cart"></span>@ViewBag.User</a></li>
                    <li></li>
                </ul>
                <form class="navbar-form navbar-right" role="search" action="/Default/Search">
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Copyright SpinTires</p>
        </footer>
    </div>



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>